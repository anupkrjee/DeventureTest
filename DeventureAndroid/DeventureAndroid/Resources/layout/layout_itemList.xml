
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	
	android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		card_view:cardCornerRadius="5dp"
        android:padding="10dp"
        card_view:cardElevation="100dp">
	<LinearLayout
		android:background="#f2f2f2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:paddingBottom="5dp">
		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginBottom="0dp">
			<ImageView
				android:layout_width="match_parent"
				android:layout_height="130dp"
				android:scaleType="centerCrop"
				android:src="@drawable/placeholder"
				android:adjustViewBounds="true"
				android:id="@+id/listImage"/>
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:stretchColumns="1"
			    android:layout_marginTop="5dp">

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">
						<RadioButton
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:id="@+id/textView1"
							android:visibility="gone"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:id="@+id/txtItemName"
						android:text="Jack's Burger"
						android:textSize="17dp"
						android:textColor="@android:color/black"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="4.5"
						android:id="@+id/txtItemRating"
						android:gravity="right"
					    android:layout_marginRight="10dp"
						android:textSize="17dp"
						android:textColor="@android:color/black"/>
					<ImageView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:gravity="right"
						android:src="@drawable/star_black"/>
				</TableRow>
			</TableLayout>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="This is nice burger"
				android:gravity="right"
				android:textAlignment="textStart"
				android:singleLine="true"
			    android:textSize="14dp"
				android:id="@+id/txtItemDescription"
				android:padding="3dip"/>
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:stretchColumns="1"
				android:layout_marginBottom="10dp">

				<TableRow
					android:layout_width="match_parent"
					android:layout_height="match_parent">
						<RadioButton
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:id="@+id/textView2"
							android:visibility="gone"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_column="1"
						android:id="@+id/txtItemPrice"
						android:text="Jack's Burger"
						android:textSize="17dp"
						android:textColor="@android:color/black"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Gulten"
						android:gravity="center_vertical"
					    android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingTop="2dp"
						android:paddingBottom="5dp"
					    android:layout_marginRight="10dp"
					    android:background="@drawable/gray_border_with_white"/>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:text="Bacon"
						android:background="@drawable/gray_border_with_white"
						android:paddingLeft="10dp"
					    android:paddingRight="10dp"
					    android:paddingTop="2dp"
						android:paddingBottom="5dp"/>
				</TableRow>
			</TableLayout>
		</GridLayout>
	</LinearLayout>
</androidx.cardview.widget.CardView>
</FrameLayout>