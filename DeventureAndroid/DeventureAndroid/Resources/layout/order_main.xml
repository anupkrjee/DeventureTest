										android:layout_height="20dp"
										android:layout_marginLeft="70dp"
										android:layout_marginTop="10dp"
										android:visibility="gone"
										android:src="@drawable/roundtick"/>
								</RelativeLayout>
								<TextView
									android:layout_width="100dp"
									android:layout_height="30dp"
									android:textSize="12dp"
									android:text="Angel Strawberry"
									android:textStyle="bold"
									android:layout_marginTop="5dp"
									android:gravity="center_horizontal"
									android:layout_gravity="start"
									android:textColor="@android:color/black"/>
								<TextView
									android:layout_width="100dp"
									android:layout_height="wrap_content"
									android:textSize="12dp"
									android:text="$ 4.50"
									android:textStyle="bold"
									android:gravity="center"
									android:layout_gravity="bottom"
									android:textColor="@android:color/black"/>
							</LinearLayout>
						</androidx.cardview.widget.CardView>
						<androidx.cardview.widget.CardView
							android:layout_width="100dp"
							android:layout_height="130dp"
							app:cardCornerRadius="5dp"
							android:animateLayoutChanges="true"
							android:layout_marginLeft="10dp"
							android:layout_marginTop="10dp"
							android:padding="10dp"
							app:cardElevation="10dp">
							<LinearLayout
								android:layout_width="100dp"
								android:layout_height="130dp"
								android:orientation="vertical"
								android:id="@+id/LavaCake"
								android:clipToPadding="true"
								android:clipChildren="true">
								<RelativeLayout
									android:layout_width="match_parent"
									android:layout_height="70dp"
									android:orientation="horizontal">
									<ImageView
										android:layout_width="100dp"
										android:layout_height="70dp"
										android:src="@drawable/lavacake"
										android:id="@+id/imgFiter"
										android:scaleType="centerCrop"/>
									<ImageView
										android:id="@+id/tickLavacake"
										android:layout_width="20dp"
										android:layout_height="20dp"
										android:layout_marginLeft="70dp"
										android:layout_marginTop="10dp"
										android:visibility="gone"
										android:src="@drawable/roundtick"/>
								</RelativeLayout>
								<TextView
									android:layout_width="100dp"
									android:layout_height="30dp"
									android:textSize="12dp"
									android:text="Lava Cake"
									android:textStyle="bold"
									android:layout_marginTop="5dp"
									android:gravity="center_horizontal"
									android:layout_gravity="start"
									android:textColor="@android:color/black"/>
								<TextView
									android:layout_width="100dp"
									android:layout_height="wrap_content"
									android:textSize="12dp"
									android:text="$ 4.50"
									android:textStyle="bold"
									android:gravity="center"
									android:layout_gravity="bottom"
									android:textColor="@android:color/black"/>
							</LinearLayout>
						</androidx.cardview.widget.CardView>
					</LinearLayout>
				</HorizontalScrollView>
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Specific Preferences?"
					android:layout_marginTop="10dp"
					android:gravity="right"
					android:textStyle="bold"
					android:layout_column="1"
					android:textSize="17dp"
					android:textAlignment="textStart"
					android:textColor="@android:color/black"/>
				<EditText
					android:layout_width="match_parent"
					android:layout_height="100dp"
					android:padding="10dp"
					android:textSize="14dp"
					android:layout_marginTop="10dp"
					android:textAlignment="viewStart"
					android:background="@drawable/border_for_editor"/>
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:stretchColumns="3"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp">
					<TableRow
						android:layout_width="match_parent"
						android:layout_height="match_parent">
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:textAlignment="center"
							android:id="@+id/btnRemoveItem"
							android:text="-"
							android:textStyle="bold"
							android:gravity="center_vertical"
							android:background="@drawable/gray_border_with_white"
							android:textColor="#B3BCC1"/>
						<TextView
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:text="1"
							android:id="@+id/txtOrderQty"
							android:textStyle="bold"
							android:layout_marginEnd="10dp"
							android:layout_marginLeft="10dp"
							android:textSize="17dp"
							android:textAlignment="center"
							android:textColor="@android:color/black"/>
						<Button
							android:layout_width="50dp"
							android:layout_height="50dp"
							android:layout_marginEnd="10dp"
							android:textAlignment="center"
							android:id="@+id/btnAddItem"
							android:text="+"
							android:textStyle="bold"
							android:gravity="center_vertical"
							android:background="@drawable/green_border_with_white"
							android:textColor="?android:attr/colorAccent"/>
						<Button
							android:layout_width="match_parent"
							android:layout_height="50dp"
							android:layout_column="3"
							android:text="Add to cart($ 10.50)"
							android:autoSizeTextType="none"
							android:id="@+id/btnAddtoCart"
							android:textAllCaps="false"
							android:textAlignment="center"
							android:gravity="center_vertical"
							android:background="@drawable/green_border"
							android:textColor="@android:color/white"/>
					</TableRow>
				</TableLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
